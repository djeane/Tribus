<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_light" />
    <!--android:layout_below="@+id/iv_topic"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1">

        <Button
            android:id="@+id/btn_add_participants"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_menu_icons"
            android:fontFamily="@font/nunito"
            android:padding="4dp"
            android:text="Aprovar participantes"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_change_admin"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_menu_icons"
            android:fontFamily="@font/nunito"
            android:padding="4dp"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_below="@+id/btn_add_participants"
            android:text="Substituir Admin"
            />

        <Button
            android:id="@+id/btn_leave_tribu"
            android:layout_width="180dp"
            android:layout_below="@+id/btn_change_admin"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_leave_tribu"
            android:fontFamily="@font/nunito"
            android:padding="4dp"
            android:text="Sair desta tribu"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
