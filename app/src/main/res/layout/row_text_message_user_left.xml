<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:visibility="invisible"
    android:id="@+id/layout_row_text_user_left">

    <RelativeLayout
        android:id="@+id/relative_removed_message_user_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <RelativeLayout
            android:id="@+id/layout_row_removed_user_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/row_messages_user_left"
            android:visibility="visible"
            >

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/tv_removed_message_user_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/nunito"
                android:hint="Esta mensagem foi removida."
                android:paddingEnd="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="italic"
                app:emojiconSize="25sp" />

            <TextView
                android:id="@+id/message_time_removed_message_user_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_removed_message_user_left"
                android:layout_below="@+id/tv_removed_message_user_left"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/nunito"
                android:paddingEnd="8dp"
                tools:text="14/12/2018 - 15:44"
                android:textAlignment="viewEnd"
                android:textSize="12sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_garbage_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_garbage"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/relative_message"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"/>

    <!--android.support.v7.widget.CardView
        android:id="@+id/card_view_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="3dp"
        android:background="@drawable/row_messages_user_left"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:layout_toEndOf="@+id/iv_garbage_message"-->

        <RelativeLayout
            android:id="@+id/relative_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:background="@drawable/row_messages_user_left"
            >

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/tv_message_user_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:paddingEnd="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:minWidth="120dp"
                android:maxWidth="250dp"
                android:textAlignment="viewStart"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                app:emojiconSize="25sp"
                android:fontFamily="@font/nunito"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:layout_marginEnd="8dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/tv_message_user_left">

                <TextView
                    android:id="@+id/message_time_user_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:visibility="visible"
                    android:layout_marginBottom="4dp"
                    android:paddingEnd="8dp"
                    tools:text="djdjdjd"
                    />

                <ImageView
                    android:id="@+id/iv_reply"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/message_time_user_left"
                    android:src="@drawable/ic_action_reply_transparent"/>

                <TextView
                    android:id="@+id/tv_reply_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    tools:text="0"
                    android:layout_toEndOf="@+id/iv_reply"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sv_tag"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/ic_action_placeholder_user_accent"
                    fresco:placeholderImage="@drawable/ic_action_placeholder_user_accent"
                    fresco:retryImage="@drawable/ic_action_placeholder_user_accent"
                    fresco:roundAsCircle="true"
                    android:layout_toEndOf="@+id/tv_reply_num"/>

                <TextView
                    android:id="@+id/tv_tag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/sv_tag"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="10" />


            </RelativeLayout>

        </RelativeLayout>


    <!--/android.support.v7.widget.CardView-->
</RelativeLayout>


