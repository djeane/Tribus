<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relative_root">

    <RelativeLayout
        android:id="@+id/relative_text_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_messages_yellow_user_right3"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="100dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:visibility="visible"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:text="por Djeane(@djeane)"/>

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:bufferType="spannable"
            android:linksClickable="true"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:visibility="visible"
            android:maxLines="2"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:text="Você votaria em Jair Bolsonaro?"/>

        <RelativeLayout
            android:id="@+id/relative_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_name"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/iv_clock"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_clock"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/topic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_clock"
                android:singleLine="true"
                android:fontFamily="@font/nunito"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:text="há 1h e meia"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="visible"
            android:text="12h30 - 12/12"
            android:singleLine="true"
            android:fontFamily="@font/nunito"
            android:layout_below="@+id/tv_topic"
            android:layout_alignEnd="@+id/tv_message"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="1dp"
            android:layout_marginEnd="80dp"
            android:layout_below="@+id/tv_topic"
            android:visibility="visible"
            android:text="cijijcijci"
            android:fontFamily="@font/nunito"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_dialog"
        android:layout_below="@+id/relative_text_topic"
/>
</RelativeLayout>
